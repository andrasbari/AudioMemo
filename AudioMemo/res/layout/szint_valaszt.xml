<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue2" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/level1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.szint [2x5]" />
        
        <Button
            android:id="@+id/level2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.szint [3x4]" />
        <Button
            android:id="@+id/level3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.szint [4x4]" />
        <Button
            android:id="@+id/level4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.szint [4x5]" />
        <Button
            android:id="@+id/level5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.szint [4x6]" />
        <Button
            android:id="@+id/level6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6.szint [5x6]" />
        <Button
            android:id="@+id/level7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7.szint [6x6]" />
        <Button
            android:id="@+id/level8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8.szint [6x7]" />
        <Button
            android:id="@+id/level9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9.szint [6x8]" />

    </LinearLayout>
    

</ScrollView>
